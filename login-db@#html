<body>
  <div id="loginPage" class="login-page">
    <div class="login-box">
      <h2>Log Masuk</h2>
      <input type="text" id="username" placeholder="Nama pengguna" />
      <input type="password" id="password" placeholder="Katalaluan" />
      <button onclick="login()">Masuk</button>
    </div>
  </div>

  <div id="dashboardWrapper" class="hidden">
    <!-- Ini akan dimasukkan kandungan dashboard asal anda selepas login -->
  </div>

  <script>
    function login() {
      const u = document.getElementById("username").value.trim();
      const p = document.getElementById("password").value.trim();
      const validUsers = [
        { user: "admin", pass: "1234" },
        { user: "test", pass: "abcd" }
      ];
      const isValid = validUsers.some(acc => acc.user === u && acc.pass === p);

      if (isValid) {
        document.getElementById("loginPage").classList.add("hidden");
        document.getElementById("dashboardWrapper").classList.remove("hidden");
        loadDashboard();
      } else {
        alert("Nama pengguna atau katalaluan salah.");
      }
    }

    function loadDashboard() {
      fetch("dashboard.html")
        .then(res => res.text())
        .then(html => {
          document.getElementById("dashboardWrapper").innerHTML = html;
        })
        .catch(err => {
          document.getElementById("dashboardWrapper").innerHTML = `<p style='color:red;'>Ralat memuatkan dashboard: ${err}</p>`;
        });
    }
  </script>
</body>
</html>
